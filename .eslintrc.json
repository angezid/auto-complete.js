{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "commonjs": true,
    "amd": true,
    "node": true,
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-template-curly-in-string": "error",
    "array-callback-return": "error",
    "default-case": "error",
    "no-extend-native": "error",
    "no-invalid-this": "warn",
    "eqeqeq": "warn",
    "no-alert": "error",
    "no-eval": "error",
    "consistent-return": "warn",
    "arrow-spacing": "error",
    "no-undefined": "error",
    "no-var": "error",
    "no-useless-escape": "warn",
    "no-control-regex": "off",
    "indent": [
      "error",
      "tab"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "max-len": [
      "error",
      {
        "ignoreStrings": false,
        "ignoreTrailingComments": false,
        "ignoreComments": false,
        "code": 150
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
